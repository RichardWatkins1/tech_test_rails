<%= simple_form_for @post, html: { multipart: true } do |f| %>
<%= f.input :image %>
<%= f.input :title, :input_html => {:placeholder => "Write your blog title here", :class => "span6", :data => {:provide => "markdown"} }%>
<%= f.input :body, :input_html => {:rows => 20, :placeholder => "Write your blog here", :class => "span6", :data => {:provide => "markdown"} }%>
<div class="form-group text-center">
  <%= f.button :submit, class: 'btn-success' %>
</div>
<div class="text-center edit-links">
  <%= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
  |
  <%= link_to "cancel", posts_path %>
</div>
<% end %>